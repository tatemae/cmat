<div id="toolbar" class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <form class="navbar-form form-inline pull-left">
        <label class="control-label title_label" for="title">TITLE</label>
        <div class="input-append">
          {{view Ember.TextField valueBinding="map.title" class="span2 toolbar-input" id="title" }}
          <div class="btn-group">
            <button class="btn dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu menu-list user_maps">
              {{#each userMaps}}
                <li><a href="#" {{action selectMap this}}>{{this.title}}</a></li>
              {{/each}}
              <li class="divider"></li>
              <li>{{#linkTo 'maps.new' title="Create a new map"}}<i class="icon-file"></i> New{{/linkTo}}</li>
              {{#if map}}
                <li>{{#linkTo 'map.duplicate' title="Duplicate the current map"}}<i class="icon-copy"></i> Duplicate{{/linkTo}}</li>
                <li>{{#linkTo 'map.destroy' title="Delete the current map"}}<i class="icon-trash"></i> Delete{{/linkTo}}</li>
              {{/if}}
            </ul>
          </div>
        </div>
      </form>
      <div class="nav-collapse collapse navbar-inverse-collapse">
        <div class="nav form-inline">
          <div class="btn-group">
            <a class="btn btn-toolbar dropdown-toggle icon_download" data-toggle="dropdown" href="#"></a>
            <ul class="dropdown-menu">
              <li class="nav-header">Import MC3 Collection</li>
              {{! <li class="divider"></li> }}
{{!                 <ul class="menu-list">
                  <li>
                    <form class="stop-click-close">
                      <div class="input-append">
                        {{view Ember.TextField valueBinding="mapSearchQuery" class="span2 toolbar-input" placeholder="Search Maps" 
                        <button {{action "search" class="btn"><i class="icon-search"></i></button>
                      </div>
                    </form>
                  </li>
                </ul> }}
              <li class="divider"></li>
              {{#each objectiveBanks}}
                <li><a href="#" {{action importObjectiveBank this}}>{{this.displayName.text}}</a></li>
              {{/each}}
            </ul>
          </div>

          {{! <div class="btn-group">
            <a class="btn btn-toolbar icon_th" href="#"></a>
          </div> }}

          <div class="btn-group">
            <a class="btn btn-toolbar icon_list" href="#" {{action addToMap}} title="Enter a map as a hierarchy"></a>
          </div>
        </div>

        <div class="nav pull-right form-inline">
          <div class="btn-group">
            <a class="btn btn-toolbar dropdown-toggle icon_eye_open" data-toggle="dropdown" href="#"></a>
            <div class="dropdown-menu stop-click-close">
              <div class="control-group">
                <div class="controls">
                  <ul class="menu-list">
                    <li><label class="checkbox">{{view Ember.Checkbox checkedBinding="showRelationships"}} Show Relationships</label></li>
                    {{! <li><label class="checkbox">view Ember.Checkbox checkedBinding="showRelationshipLabels" Show Relationship Labels</label></li> }}
                    <li><label class="checkbox">{{view Ember.Checkbox checkedBinding="showNodeLabels"}} Show Node Labels</label></li>
                    {{! <li><label class="checkbox">view Ember.Checkbox checkedBinding="showNodeDescriptions" Show Node Descriptions</label></li> }}
                  </ul>
                </div>
              </div>
            </div>
          </div>
          {{#switch data-on-label="edit" data-off-label="view" class="switch-small"}}
            {{view Ember.Checkbox checkedBinding="isEditing"}}
          {{/switch}}
          <div class="btn-group">
            {{#if controllers.currentUser.isSignedIn}}
              <a href="#" class="btn btn-toolbar name_btn">{{controllers.currentUser.name}}</a>
              {{#linkTo 'sessions.destroy' class="btn btn-toolbar name_btn"}}Logout{{/linkTo}}
            {{else}}
              {{#linkTo 'users.new' class="btn btn-toolbar name_btn"}}Sign Up{{/linkTo}} |
              {{#linkTo 'sessions.new' class="btn btn-toolbar name_btn"}}Login{{/linkTo}}
            {{/if}}
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
